<hibernate-mapping>
    <class name="com.bbva.scorating.domain.Perfil" table="PERFILES" schema="REPQIS">
        <id name="idPerfil" type="long">
            <column name="ID" precision="9" scale="0" />
            <generator class="sequence">
                <param name="sequence">SQ_PERFIL</param>
            </generator>
        </id>
             
        <property name="codigoPerfil" type="string">
            <column name="CODIGOPERFIL" length="5" not-null="true" />
        </property>
        <property name="nombrePerfil" type="string">
            <column name="DESCRIPCIONPERFIL" length="200" />
        </property>
         <property name="estado" type="char">
            <column name="ESTADO" length="1" not-null="true" />
        </property>
       
